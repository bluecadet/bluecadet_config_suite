<?php
/**
 * @file
 * Install, update, and uninstall functions for the BC Image Fields module.
 */

/**
 * Display message to user to update Form and View Displays.
 */
function bluecadet_media_fields_install() {
  $message = "Bluecadet Image Fields has been installed. Please update your Image and Video Media Form Displays and View Displays";
  drupal_set_message($message, 'status');
}
